
@{
    ViewBag.Title = "Kategori Duzenleme Sayfası";
}


@using BlogOdev.Models.data
@model Kategori

<form action="/Kategori/Duzenle" method="post">

    <table>
        <tr>
            <td>Kategori Adı:</td>
            <td><input type="hidden" name="KategoriId" value="@Model.KategoriId" /></td>
            <td><input type="text" name="KategoriAdi"  value="@Model.KategoriAdi" /></td>
        </tr>


        <tr>
            <td>Açıklama:</td>
            
            <td><textarea name="Aciklama">@Model.Aciklama</textarea></td>
        </tr>

        <tr>
            <td></td>
            <td>
                <input type="submit" name="submit" value="Duzenle" />
            </td>
        </tr>

    </table>


</form>
